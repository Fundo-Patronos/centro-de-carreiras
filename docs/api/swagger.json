{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Centro de Carreiras API",
    "description": "Documentação da API para o Centro de Carreiras 2024"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "paths": {
    "/auth/google-login": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Login com Google",
        "description": "Realiza login de estudantes usando o SSO do Google.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Token do Google para autenticação",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "access_token": {
                  "type": "string"
                },
                "user": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/manual-approval-request": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Solicitação de Aprovação Manual",
        "description": "Envia uma solicitação para aprovação manual de login para alunos sem email institucional.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados do aluno para aprovação manual",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "reason": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/webhook/manual-approval": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Recebimento de Aprovação Manual",
        "description": "Recebe a notificação de aprovação ou rejeição e finaliza o processo de cadastro do aluno.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados do aluno e status de aprovação",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "record_id": {
                  "type": "string"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "approved",
                    "rejected"
                  ]
                },
                "student": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "student": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "registration_status": {
                      "type": "string",
                      "enum": [
                        "approved",
                        "rejected"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/students": {
      "get": {
        "tags": [
          "Students"
        ],
        "summary": "Listar Estudantes",
        "description": "Lista todos os estudantes cadastrados.",
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Students"
        ],
        "summary": "Registrar Estudante",
        "description": "Cria um novo registro de estudante.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados do estudante",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "course": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Estudante criado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/students/{id}": {
      "get": {
        "tags": [
          "Students"
        ],
        "summary": "Obter Estudante",
        "description": "Retorna os dados de um estudante específico.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "ID do estudante"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Students"
        ],
        "summary": "Atualizar Estudante",
        "description": "Atualiza as informações de um estudante.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "ID do estudante"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Dados do estudante a serem atualizados",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "course": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Estudante atualizado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Students"
        ],
        "summary": "Deletar Estudante",
        "description": "Remove um estudante do sistema.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "ID do estudante"
          }
        ],
        "responses": {
          "200": {
            "description": "Estudante deletado com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/mentors": {
      "get": {
        "tags": [
          "Mentors"
        ],
        "summary": "Listar Mentores",
        "description": "Busca mentores disponíveis com base em critérios específicos.",
        "parameters": [
          {
            "in": "query",
            "name": "field",
            "type": "string",
            "description": "Campo de estudo ou especialidade"
          },
          {
            "in": "query",
            "name": "availability",
            "type": "string",
            "description": "Intervalo de datas disponíveis"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "field": {
                    "type": "string"
                  },
                  "availability": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mentors/{mentor_id}/availability": {
      "get": {
        "tags": [
          "Mentors"
        ],
        "summary": "Retorna a lista de horários disponíveis e os horários já marcados de um mentor específico.",
        "parameters": [
          {
            "in": "path",
            "required": true,
            "name": "mentor_id",
            "type": "string",
            "description": "ID do mentor"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "available_slots": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "start": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "end": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                },
                "booked_slots": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "start": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "end": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/mentors/schedule": {
      "post": {
        "tags": [
          "Mentors"
        ],
        "summary": "Agendar Sessão com Mentor",
        "description": "Agenda uma sessão com um mentor.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados da sessão a ser agendada",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "mentor_id": {
                  "type": "string"
                },
                "student_id": {
                  "type": "string"
                },
                "datetime": {
                  "type": "string",
                  "description": "horário do agendamento (deve estar disponível)",
                  "format": "date-time"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sessão agendada com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/mentors/request-availability": {
      "post": {
        "tags": [
          "Mentors"
        ],
        "summary": "Solicitar Disponibilidade de Mentor",
        "description": "Solicita disponibilidade futura de um mentor.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados para solicitação de disponibilidade",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "mentor_id": {
                  "type": "string"
                },
                "student_id": {
                  "type": "string"
                },
                "preferred_times": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "format": "date-time"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Solicitação de disponibilidade enviada",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/jobs": {
      "get": {
        "tags": [
          "Jobs"
        ],
        "summary": "Listar Vagas",
        "description": "Retorna uma lista de vagas disponíveis.",
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "company": {
                    "type": "string"
                  },
                  "location": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/jobs/notify": {
      "post": {
        "tags": [
          "Jobs"
        ],
        "summary": "Notificar sobre Novas Vagas",
        "description": "Envia notificações de novas vagas para os estudantes.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados da notificação de vaga",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "job_id": {
                  "type": "string"
                },
                "student_ids": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Notificações enviadas com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/notifications": {
      "post": {
        "tags": [
          "Notification"
        ],
        "summary": "Enviar Notificação",
        "description": "Envia uma notificação para um estudante.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados da notificação",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "student_id": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Notificação enviada com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/metrics": {
      "get": {
        "tags": [
          "Metrics"
        ],
        "summary": "Obter Métricas",
        "description": "Retorna métricas para monitoramento.",
        "responses": {
          "200": {
            "description": "Sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "registered_students": {
                  "type": "integer"
                },
                "scheduled_sessions": {
                  "type": "integer"
                }
              }
            }
          }
        }
      }
    },
    "/metrics/external": {
      "post": {
        "tags": [
          "Metrics"
        ],
        "summary": "Enviar Métricas Externas",
        "description": "Envia métricas para uma fonte externa.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados das métricas",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "metrics": {
                  "type": "object",
                  "properties": {
                    "registered_students": {
                      "type": "integer"
                    },
                    "scheduled_sessions": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Métricas enviadas com sucesso",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}